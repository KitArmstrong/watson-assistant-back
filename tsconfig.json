{
    "compilerOptions": {
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "allowJs": false,
      "removeComments": true,
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "baseUrl": "./",
      "outDir": "./build",
      "rootDir": "./src",
    },
    "exclude": [
      "**/*.spec.ts",
      "node_modules"
    ]
}

  